{
  "name": "advent-of-code",
  "version": "2023.10.1",
  "description": "Solutions for Advent of Code",
  "private": true,
  "author": "Alessandro Bianco <code@alebianco.dev>",
  "license": "unlicense",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "precommit": "lint-staged --verbose --allow-empty",
    "play": "npm run --workspace editions/${npm_package_config_aoc_year} play ${npm_package_config_aoc_day}",
    "solve": "npm run --workspace editions/${npm_package_config_aoc_year} solve ${npm_package_config_aoc_day}",
    "leaderboard": "aoc leaderboard 439401 --year ${npm_package_config_aoc_year}"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "editions/*"
    ]
  },
  "config": {
    "aoc": {
      "year": "2023",
      "day": "10"
    }
  },
  "lint-staged": {
    "*.js": "standard --fix"
  },
  "devDependencies": {
    "@jakzo/aoc": "1.2.0",
    "@types/benchmark": "2.1.5",
    "@types/cli-progress": "3.11.5",
    "@types/node": "20.10.1",
    "@types/pretty-time": "1.1.5",
    "benchmark": "2.1.4",
    "cli-progress": "3.12.0",
    "husky": "8.0.3",
    "lint-staged": "15.1.0",
    "pretty-time": "1.1.0",
    "standard": "17.1.0"
  }
}
